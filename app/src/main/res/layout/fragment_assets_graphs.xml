<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".RegisteredMovementsFragment"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- <Space
                android:layout_width="@string/image_button_assets_graph_width"
                android:layout_height="match_parent" />-->

            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="?attr/actionModeCloseDrawable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="August 2022"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                app:layout_constraintEnd_toStartOf="@id/space"
                app:layout_constraintStart_toEndOf="@id/imgBtnBack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <Space
                android:id="@+id/space"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="50dp"
                android:layout_height="20dp"/>

            <!--<ImageButton
                android:id="@+id/imgBtnAssetsGraph"
                android:layout_width="@string/image_button_assets_graph_width"
                android:layout_height="@string/image_button_assets_graph_width"
                tools:srcCompat="@tools:sample/avatars"
                android:contentDescription="TODO" />--> <!-- TODO -->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnWeek"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_week_string"
                app:layout_constraintEnd_toStartOf="@+id/btnMonth"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnMonth"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_month_string"
                app:layout_constraintEnd_toStartOf="@+id/btnPeriod"
                app:layout_constraintStart_toEndOf="@+id/btnWeek"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnPeriod"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/button_period_string"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnMonth"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Assets trend" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/mockView3"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/mockView4"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <androidx.constraintlayout.utils.widget.MockView
            android:id="@+id/mockView6"
            android:layout_width="match_parent"
            android:layout_height="500dp" />
    </LinearLayout>
</ScrollView>